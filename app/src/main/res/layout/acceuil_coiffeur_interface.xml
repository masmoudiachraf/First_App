<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/afta7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1"
        android:background="@color/title_separator">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:layout_gravity="left"
            android:layout_marginLeft="10px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iden_coif"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:textStyle="normal|bold|italic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageButton
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@mipmap/typecoiff"
                android:layout_marginLeft="15px"
                android:id="@+id/tyc"
                />
            <ImageButton
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="15px"
                android:background="@mipmap/date"
                android:id="@+id/audate"
                />
            <ImageButton
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@mipmap/avatar"
                android:layout_marginLeft="15px"
                android:layout_marginRight="10px"
                android:id="@+id/listcli"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:textSize="50px"
            android:textColor="@color/title_text"
            android:gravity="center_vertical|center_horizontal|center"
            android:id="@+id/datecou"/>
    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv1"/>

</LinearLayout>